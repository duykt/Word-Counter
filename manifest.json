{
    "manifest_version": 3,
    "name": "Word Counter",
    "version": "1.0",
    "description": "A browser extention that displays word count of highlighted text",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    }
}